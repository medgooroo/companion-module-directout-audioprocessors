{
	"extends": "@companion-module/tools/tsconfig/node22/recommended.json",
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules/**", "src/**/*spec.ts", "src/**/__tests__/*", "src/**/__mocks__/*"],
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"*": ["./node_modules/*"]
		},
		// "module": "nodenext",
		// "moduleResolution": "nodenext"
		"module": "ES6",
		"esModuleInterop": true
	}
}
